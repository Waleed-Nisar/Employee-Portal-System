@model IEnumerable<EPS.Application.DTOs.DepartmentDto>

@{
    ViewData["Title"] = "Departments";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>Departments</h2>
            <p class="text-muted">Manage organizational departments</p>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Add Department
            </a>
        </div>
    </div>

    <div class="row">
        @if (Model.Any())
        {
            @foreach (var dept in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">@dept.Name</h5>
                                @if (dept.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </div>
                            <p class="text-muted small mb-2"><i class="bi bi-tag me-2"></i>Code: @(dept.Code ?? "N/A")</p>
                            <p class="card-text">@(dept.Description ?? "No description available")</p>
                            <hr />
                            <p class="mb-2"><i class="bi bi-geo-alt me-2"></i><strong>Location:</strong> @(dept.Location ?? "N/A")</p>
                            <p class="mb-2"><i class="bi bi-person me-2"></i><strong>Head:</strong> @(dept.HeadEmployeeName ?? "N/A")</p>
                            <p class="mb-3"><i class="bi bi-people me-2"></i><strong>Employees:</strong> @dept.EmployeeCount</p>
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@dept.Id" class="btn btn-sm btn-info flex-fill">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@dept.Id" class="btn btn-sm btn-warning flex-fill">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <form asp-action="Delete" asp-route-id="@dept.Id" method="post" class="flex-fill" onsubmit="return confirm('Delete this department?');">
                                        <button type="submit" class="btn btn-sm btn-danger w-100">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center text-muted py-5">
                        <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                        <h5>No Departments Found</h5>
                        <p>Create your first department to get started</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
